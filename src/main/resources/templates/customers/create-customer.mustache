<!doctype html>
<html lang="en">

{{<base/head}}
  {{$scripts}}
    <script defer src="/js/create-customer.js"></script>
  {{/scripts}}
  {{$title}}Create Customer{{/title}}
{{/base/head}}

<body>
{{>layout/header}}
{{<layout/main}}
  {{$title}}Create Customer{{/title}}
  {{$content}}
    <form action="/customers/create" method="post">
      <div class="row mt-4">
        <div class="col-lg-6">
          <label class="form-label" for="name">Name</label>
          <input required class="form-control" type="text" name="name" id="name"/>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-lg-4">
          <label class="form-label" for="email">Email</label>
          <input class="form-control" type="email" name="email" id="email"/>
          <div class="form-text">Optional</div>
        </div>
        <div class="col-lg-2">
          <label class="form-label" for="phone">Phone</label>
          <input class="form-control" type="text" name="phone" id="phone"/>
          <div class="form-text">Optional</div>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-12">
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="include-address" checked/>
            <label class="form-check-label" for="include-address">Include address</label>
          </div>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-lg-6">
          <label class="form-label" for="street">Street</label>
          <input required class="form-control" type="text" name="address.street" id="street"/>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-lg-4">
          <label class="form-label" for="city">City</label>
          <input required class="form-control" type="text" name="address.city" id="city"/>
        </div>
        <div class="col-lg-2">
          <label class="form-label" for="state">State/Province</label>
          <input required class="form-control" type="text" name="address.state" id="state"/>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-lg-2">
          <label class="form-label" for="postal-code">ZIP/Postal Code</label>
          <input required class="form-control" type="text" name="address.postalCode" id="postal-code"/>
        </div>
        <div class="col-lg-4">
          <label class="form-label" for="country">Country</label>
          <input required class="form-control" type="text" name="address.country" id="country"/>
        </div>
      </div>
      <div class="row">
        <div class="col-12 mt-4 d-flex gap-2">
          <button class="btn btn-primary">Save</button>
          <a class="btn btn-outline-primary" href="#">Cancel</a>
        </div>
      </div>
    </form>
  {{/content}}
{{/layout/main}}
</body>

</html>