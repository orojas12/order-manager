<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/index.css"/>
  <link rel="stylesheet" href="/css/orders.css">
  <link rel="stylesheet" href="/css/header.css">
  <script defer src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
          integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
          crossorigin="anonymous"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.min.js"
          integrity="sha384-G/EV+4j2dNv+tEPo3++6LCgdCROaejBqfUeNjuKAiuXbjrxilcCdDz6ZAVfHWe1Y"
          crossorigin="anonymous"></script>
  <title>Orders</title>
</head>
<body>
{{>layout/header}}
{{<layout/main}}
  {{$title}}Orders{{/title}}
  {{$content}}
    <div class="orders__controls">
      <a href="/create-order" class="btn btn-primary">Create Order</a>
    </div>
    <table id="orders-table" class="table table-hover">
      <thead>
      <tr>
        <th>Date Created</th>
        <th>ID</th>
        <th>Status</th>
        <th class="text-end">Total</th>
        <th>Customer</th>
      </tr>
      </thead>
      <tbody>
      {{#orders}}
        <tr>
          <td>{{creationDate}}</td>
          <td><a href="/order-details?id={{id}}">{{id}}</a></td>
          <td>{{status}}</td>
          <td class="text-end">{{total}}</td>
          <td>{{customer.name}}</td>
        </tr>
      {{/orders}}
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <nav aria-label="order list pages">
        <ul class="pagination">
          {{#paginationLinks}}
            <li class="page-item {{#isCurrent}}active{{/isCurrent}}">
              <a class="page-link" href="{{href}}">{{label}}</a>
            </li>
          {{/paginationLinks}}
        </ul>
      </nav>
    </div>
  {{/content}}
{{/layout/main}}
</body>
</html>

